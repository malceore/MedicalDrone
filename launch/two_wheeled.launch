<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <param name="robot_description" command="$(find xacro)/xacro --inorder '$(find medicalDrone)/robots/two_wheeled_robot/m2wr.xacro'" />
    
    <arg name="x" default="0"/>
    <arg name="y" default="0"/>
    <arg name="z" default="0.5"/>
    
    <node name="mybot_spawn" pkg="gazebo_ros" type="spawn_model" output="screen"
          args="-urdf -param robot_description -model m2wr -x $(arg x) -y $(arg y) -z $(arg z)" />

    <rosparam file="$(find medicalDrone)/robots/two_wheeled_robot/diff_drive.yaml" command="load"/>
    <node name="differ_drive_controller" pkg="controller_manager" type="spawner" response="false" output="screen" args="differ_drive_controller" />
</launch>
